<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud_partly_cloudy_gradient"
    tools:context="apps.sandesh.stockmarketapp.FragmentB">

    <TextView
        android:id="@+id/description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text=""
        android:layout_gravity="center"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:id="@+id/day_layout">

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:id="@+id/stock_chart"
            android:layout_weight="1"
            android:layout_height="0dp"></com.github.mikephil.charting.charts.LineChart>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company A"
                android:onClick="getStockInfo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration 1"
                android:id="@+id/today_button"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="#dadada"
                />




            <TextView
                android:text="Duration 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#dadada"
                android:layout_toRightOf="@id/today_button"
                android:id="@+id/multi_day_button"
                />

        </RelativeLayout>



            <TableLayout
                android:background="@drawable/transparent_gradient"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:stretchColumns="*"
                android:layout_marginBottom="8dp"
                >
                <TableRow>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="70dp"
                        android:id="@+id/latitude_layout"
                        android:onClick="displayToast"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="33"
                            android:textSize="30dp"
                            android:gravity="center"
                            android:id="@+id/latitudeTextView"
                            android:textColor="#FFCECECE"
                            android:layout_height="40dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="15dp"
                            android:text="Latitude"
                            android:textColor="#94989f"
                            android:gravity="center"

                            android:layout_height="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="70dp"
                        android:id="@+id/longitude_layout"
                        android:onClick="displayToast"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="33"
                            android:id="@+id/longitudeTextView"
                            android:textSize="30dp"
                            android:textColor="#FFCECECE"
                            android:gravity="center"
                            android:layout_height="40dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="15dp"
                            android:text="Longitude"
                            android:textColor="#94989f"
                            android:gravity="center"

                            android:layout_height="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="70dp"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="33"
                            android:id="@+id/timeZoneOffsetText"
                            android:textSize="30dp"
                            android:textColor="#FFCECECE"
                            android:gravity="center"
                            android:layout_height="40dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="15dp"
                            android:text="GMT Offset"
                            android:textColor="#94989f"
                            android:gravity="center"

                            android:layout_height="20dp" />
                    </LinearLayout>

                </TableRow>
                <TableRow>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="70dp"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="33"
                            android:id="@+id/windSpeedTextView"
                            android:textSize="30dp"
                            android:textColor="#FFCECECE"
                            android:gravity="center"
                            android:layout_height="40dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="15dp"
                            android:text="Windspeed"
                            android:textColor="#94989f"
                            android:gravity="center"

                            android:layout_height="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="70dp"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="33"
                            android:textSize="30dp"
                            android:textColor="#FFCECECE"
                            android:id="@+id/humidityTextView"
                            android:gravity="center"
                            android:layout_height="40dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="15dp"
                            android:text="Humidity"
                            android:textColor="#94989f"
                            android:gravity="center"

                            android:layout_height="20dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="70dp"
                        android:padding="5dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:text="33"
                            android:id="@+id/pressureTextView"
                            android:textSize="30dp"
                            android:textColor="#FFCECECE"
                            android:gravity="center"
                            android:layout_height="40dp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:textSize="15dp"
                            android:text="Pressure"
                            android:textColor="#94989f"
                            android:gravity="center"

                            android:layout_height="20dp" />
                    </LinearLayout>

                </TableRow>

            </TableLayout>
    </LinearLayout>
</FrameLayout>